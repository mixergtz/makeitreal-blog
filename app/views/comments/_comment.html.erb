<div class="well well-sm">

<div class="row">

  <div class="col-sm-10">
    <p class="text-muted"><i><%= comment.created_at.strftime("El %F a las %T ") %></i></p>
    <p><%= comment.body %></p>
  </div>

  <div class="col-sm-2 commenter-pic text-center">
    <%= image_tag Gravatar.new(comment.user.email).image_url(s: 70), class: "img-rounded" %>
    <p><%= comment.user.name%></p>
  </div>

</div>



</div>