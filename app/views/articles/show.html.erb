<div class="container">

<div class="col-md-8 col-md-offset-2 article">

<div class="row ">
	<%= link_to raw("<span class='glyphicon glyphicon-arrow-left'></span> Volver"), root_path , class: "btn btn-primary volver-btn" %>

</div>

<br>


 <div class="panel panel-primary">
   <div class="panel-heading">
     <h3><%= @article.title %></h3>
     <p class="text-right date"><%=  @article.created_at.strftime("%F - %T ") %></p>
   </div>
   <div class="panel-body">
       <p><%= @article.text %></p>
   </div>

 </div>


<hr>

	<h4 class="text-center">Comments for this article</h4>
	<%= render @article.comments %>


	<h4>Add a comment:</h4>
	<%= render "comments/form" %>


	<%= link_to "Back", articles_path %>
	<%= link_to 'Edit', edit_article_path(@article) %>

</div>



</div>

